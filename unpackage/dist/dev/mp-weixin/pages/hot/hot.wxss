.mainBg {
  background: linear-gradient(#793FD9, #3F2385);
}
.main {
  width: 100%;
  height: 100%;
  position: relative;
  top: 0;
  left: 0;
  overflow: auto;
  background-size: cover;
}
.listBar {
  width: 686rpx;
  height: 76rpx;
  border-radius: 48rpx;
  background: rgba(255, 255, 255, 0.23);
  justify-content: space-around;
  flex-wrap: wrap;
  display: flex;
  margin-top: 50rpx;
  margin-left: 32rpx;
}
.listBar view {
  width: 168rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  color: white;
  margin-top: 10rpx;
  font-size: 28rpx;
}
.listBar view.active {
  background: white;
  border-radius: 56rpx;
  color: #AB5FF1;
}
.rule {
  width: 178rpx;
  height: 56rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 41rpx 0 0 41rpx;
  font-weight: 500;
  font-size: 28rpx;
  color: black;
  background: #FFB654;
  position: fixed;
  right: 0;
  z-index: 99999999;
  top: 170rpx;
}
.topActer {
  width: 100%;
  margin-top: 80rpx;
  justify-content: space-around;
  flex-wrap: wrap;
  display: flex;
}
.topActer > view {
  width: 184rpx;
  height: 368rpx;
  float: left;
  position: relative;
  margin-top: 74rpx;
}
.topActer > view image {
  width: 100%;
  height: 100%;
  display: block;
  position: relative;
  z-index: 999999;
}
.topActer > view view {
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  color: white;
  position: absolute;
  top: 212rpx;
  left: 0;
  z-index: 9999999;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.topActer > view .fanNum {
  top: 260rpx;
  left: 74rpx;
  width: 104rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.topActer > view view.fanNum {
  font-size: 24rpx;
  text-align: left;
}
.topActer > view view.actSrc {
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
  overflow: hidden;
  top: 47rpx;
  left: 32rpx;
  z-index: 0;
}
.topActer > view.top_1 {
  width: 208rpx;
  height: 444rpx;
  margin-top: 0rpx;
}
.topActer > view.top_1 view.actSrc {
  width: 152rpx;
  height: 152rpx;
  top: 50rpx;
}
.topActer > view.top_1 view {
  font-size: 32rpx;
  top: 240rpx;
}
.topActer > view.top_1 .fanNum {
  top: 300rpx;
  font-size: 28rpx;
}
.list {
  width: 686rpx;
  background: #3F2385;
  margin: 48rpx 0 48rpx 32rpx;
  border-radius: 22rpx;
  overflow: hidden;
  padding: 0;
}
.list image {
  width: 100%;
  height: 100%;
}
.list > view {
  color: white;
  overflow: hidden;
  margin: 24rpx 0 24rpx 0;
}
.list > view view {
  float: left;
  margin: 26rpx 0rpx 0 26rpx;
}
.list .list_name {
  font-size: 28rpx;
  width: 150rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.list .list_num {
  font-size: 32rpx;
  width: 40rpx;
}
.list .list_pic {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 0 0 26rpx;
  padding: 0;
}
.list .hot image {
  width: 24rpx;
  height: 24rpx;
}
.list .hot .hotNum {
  font-size: 24rpx;
  float: right;
  margin: 0rpx 0 0 6rpx;
  padding-top: 4rpx;
  width: 90rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.main .list_connect {
  width: 120rpx;
  height: 48rpx;
  text-align: center;
  border-radius: 27rpx;
  line-height: 48rpx;
  background: linear-gradient(90deg, #7840F6 0%, #B464EF 100%);
  float: right;
  font-size: 28rpx;
  margin-right: 26rpx;
  margin-top: 18rpx;
}
.topActer .list_connect {
  background: white;
  color: #AB5FF1;
  margin: 90rpx 36rpx 0;
}
.list .lastAct {
  position: fixed;
  bottom: 0;
  left: 0;
  background: #300A5C;
  width: 100%;
  margin: 0;
  padding: 18rpx 0 18rpx 0;
}
.list .lastAct > view {
  margin: 20rpx 16rpx 0 0rpx;
}
.list .lastAct .list_pic {
  width: 64rpx;
  height: 64rpx;
  margin-top: 0;
}
.list .lastAct .list_name {
  font-size: 24rpx;
  width: 150rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.list .lastAct .list_num {
  font-size: 28rpx;
  margin-left: 16rpx;
}
.list .lastAct .hot {
  margin-top: 14rpx;
}
.list .lastAct .hot image {
  width: 20rpx;
  height: 20rpx;
}
.list .lastAct .hot .hotNum {
  font-size: 20rpx;
  padding-top: 10rpx;
  width: 60rpx;
}
.list .lastAct .last {
  font-size: 28rpx;
  float: right;
}
.van-dialog {
  z-index: 9999999999999999;
  position: relative;
}
.van-dialog .van-button--danger {
  font-size: 32rpx;
  background: linear-gradient(90deg, #7840F6 0%, #B464EF 100%);
}
.van-dialog .van-dialog__header {
  font-size: 36rpx;
  font-weight: 500;
  color: #3E3E3E;
  line-height: 50rpx;
}
.van-dialog .van-dialog__message {
  margin-top: 8rpx;
}
.van-dialog .van-dialog__message .van-dialog__message-text {
  font-size: 28rpx;
  font-weight: 400;
  color: #3E3E3E;
  line-height: 48rpx;
}
.van-dialog .van-dialog__message-text {
  text-align: center;
}
