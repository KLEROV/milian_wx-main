.content {
  width: 100%;
  height: 100%;
  position: fixed;
}
.content .tip {
  width: 288rpx;
  height: 100rpx;
  margin: 80rpx auto 0;
}
.content .tip image {
  width: 112rpx;
  height: 112rpx;
  display: block;
  margin: 0 auto;
}
.content .tip view {
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 48rpx;
}
.detailMessage {
  width: 100%;
  height: 400rpx;
  position: absolute;
  bottom: 40rpx;
  left: 0;
}
.detailMessage .hallo {
  text-align: center;
  font-size: 32rpx;
  color: white;
}
.detailMessage .chatMessage {
  justify-content: space-around;
  flex-wrap: wrap;
  display: flex;
  margin-top: 48rpx;
}
.detailMessage .chatMessage > view {
  min-width: 32%;
  border: 2rpx solid #FFFFFF;
  border-radius: 35rpx;
  padding: 8rpx 26rpx;
  text-align: center;
  position: relative;
}
.detailMessage .chatMessage > view view {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  display: inline-block;
  position: relative;
  top: -7rpx;
  margin-left: 14rpx;
}
.detailMessage .chatMessage > view image {
  width: 44rpx;
  height: 44rpx;
  display: inline-block;
  position: relative;
  top: 10rpx;
}
.detailMessage .needMoney {
  width: 522rpx;
  background: linear-gradient(90deg, #7840F6 0%, #B464EF 100%);
  border-radius: 54rpx;
  overflow: hidden;
  margin: 64rpx auto 24rpx;
  text-align: center;
}
.detailMessage .needMoney > view {
  padding: 28rpx 0rpx;
  display: inline-block;
}
.detailMessage .needMoney > view view {
  float: left;
}
.detailMessage .needMoney > view image {
  width: 40rpx;
  height: 40rpx;
  margin: 6rpx 10rpx 0 24rpx;
  float: left;
}
.detailMessage .restMoney {
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}
.detailMessage .restMoney image {
  width: 32rpx;
  height: 32rpx;
  display: block;
  float: left;
  margin-right: 10rpx;
}
.detailMessage .restMoney view {
  font-size: 28rpx;
  color: white;
  float: left;
}
swiper {
  margin-top: 100rpx;
  width: 100%;
  height: 510rpx;
  text-align: center;
}
swiper swiper-item {
  width: 510rpx;
  position: relative;
}
swiper swiper-item > view {
  overflow: hidden;
}
swiper swiper-item > view > view {
  float: left;
  color: white;
}
swiper swiper-item > view .title {
  font-size: 28rpx;
  width: 340rpx;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
swiper swiper-item > view .point {
  float: right;
  margin-right: 26rpx;
}
swiper swiper-item > view .point image {
  width: 46rpx;
  height: 48rpx;
}
swiper swiper-item > view .point view {
  float: right;
  font-size: 20rpx;
  margin: 10rpx 0 0 10rpx;
}
swiper swiper-item .pic {
  width: 120px;
  height: 120px;
  display: block;
  margin: 0px auto;
  border-radius: 24rpx;
  overflow: hidden;
  position: absolute;
  left: 50rpx;
  bottom: 0;
}
swiper swiper-item .pic image {
  width: 100%;
  height: 100%;
}
swiper swiper-item .actMessage {
  position: absolute;
  bottom: 10rpx;
  left: 66rpx;
  width: 100%;
}
swiper swiper-item.active > view .title {
  font-size: 36rpx;
  margin-left: 26rpx;
}
swiper swiper-item.active > view .point image {
  width: 46rpx;
  height: 48rpx;
}
swiper swiper-item.active > view .point view {
  font-size: 28rpx;
}
swiper swiper-item.active .pic {
  width: 510rpx;
  height: 510rpx;
  left: 0;
  -webkit-animation: scaleUp .5s ease;
          animation: scaleUp .5s ease;
}
swiper swiper-item.active .actMessage {
  left: 0;
  bottom: 26rpx;
}
swiper swiper-item.lostActive .pic {
  right: -100rpx;
}
swiper swiper-item.lostActive .actMessage {
  left: 0;
}
swiper swiper-item.lostActive .point {
  margin-right: 80rpx;
}
@-webkit-keyframes scaleUp {
0% {
    width: 132rpx;
    height: 132rpx;
}
100% {
    width: 520rpx;
    height: 520rpx;
}
}
@keyframes scaleUp {
0% {
    width: 132rpx;
    height: 132rpx;
}
100% {
    width: 520rpx;
    height: 520rpx;
}
}
@-webkit-keyframes fontScaleUp {
0% {
    font-size: 28rpx;
}
100% {
    width: 520rpx;
    height: 520rpx;
}
}
@keyframes fontScaleUp {
0% {
    font-size: 28rpx;
}
100% {
    width: 520rpx;
    height: 520rpx;
}
}
