.bill {
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.bill .perdata {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}
.bill .perdata .perdata-accost {
  color: #3E3E3E;
  font-size: 32rpx;
  text-align: center;
  position: relative;
}
.bill .perdata .perdata-accost .perdata-accostImg {
  width: 96rpx;
  height: 32rpx;
  position: absolute;
  top: 14rpx;
  right: -70rpx;
}
.bill .perdata .perdata-beaccost {
  color: #3E3E3E;
  font-size: 32rpx;
  text-align: center;
}
.bill .perdata .perdata-hot {
  text-align: center;
  color: #3E3E3E;
  font-size: 32rpx;
}
.bill .perdata .perdata-hot .perdata-hotItem {
  color: #858585;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.bill .perdata .perdata-hot .perdata-hotItem .perdata-hotImg {
  width: 28rpx;
  height: 28rpx;
  margin-left: 6rpx;
}
.bill .account {
  display: flex;
  justify-content: space-between;
}
.bill .account .balance {
  width: 48%;
  height: auto;
  background: #FFFFFF;
  box-shadow: 0px 0px 7px 0px rgba(159, 150, 253, 0.46);
  border-radius: 10rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.bill .account .balance .balance-box1 {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.bill .account .balance .balance-box1 .box1-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}
.bill .account .balance .balance-box2 {
  margin: 20rpx 0;
  font-weight: 600;
  text-align: center;
}
.bill .account .balance .balance-box3 {
  display: flex;
  justify-content: center;
}
.bill .account .balance .balance-box3 button {
  width: 100rpx;
  height: 48rpx;
  border-radius: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  margin: 0;
}
.bill .account .balance .balance-box3 .btn1 {
  color: #3E3E3E;
  border: 1px solid #3E3E3E;
  margin-right: 20rpx;
}
.bill .account .balance .balance-box3 .btn2 {
  color: #FFFFFF;
  background: linear-gradient(90deg, #7840F6 0%, #B464EF 100%);
}
.bill .account .invitation {
  position: relative;
}
.bill .account .invitation .invitation-triangle {
  position: absolute;
  top: 0;
  right: 0;
  width: 0;
  height: 0;
  border-top: 100rpx solid #F17171;
  border-left: 100rpx solid transparent;
}
.bill .account .invitation .invitation-triangle .triangle-text {
  width: 70rpx;
  position: absolute;
  top: -80rpx;
  right: -7rpx;
  font-size: 20rpx;
  color: #FFFFFF;
  -webkit-transform: rotate(48deg);
          transform: rotate(48deg);
}
.bill .my-bill {
  padding: 30rpx;
  background-color: #9F96FD;
  border-radius: 16rpx;
  box-shadow: 0px 0px 7px 0px rgba(159, 150, 253, 0.46);
  margin-top: 30rpx;
  box-sizing: border-box;
  color: #FFFFFF;
}
.bill .my-bill .billHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5px 0;
  box-sizing: border-box;
}
.bill .my-bill .billHeader .billHeader-img {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.bill .my-bill .billContent {
  display: flex;
  justify-content: space-between;
}
.bill .my-bill .billContent .billContent-box1 {
  text-align: center;
  font-size: 40rpx;
}
.bill .my-bill .billContent .billContent-box1 .billContent-number {
  margin-top: 12rpx;
}

