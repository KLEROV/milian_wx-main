.content {
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, #F73656 0%, #FF8E6B 100%);
}
.content > image {
  width: 750rpx;
  height: 970rpx;
}
.howPlay {
  width: 142rpx;
  height: 64rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 64rpx;
  text-align: center;
  position: fixed;
  right: -10rpx;
  top: 100rpx;
  background: rgba(0, 0, 0, 0.26);
  border-radius: 32rpx 0px 0px 32rpx;
}
.van-popup {
  padding: 32rpx;
}
.van-popup .title {
  position: relative;
  margin-top: 72rpx;
}
.van-popup .title image {
  width: 36rpx;
  height: 30rpx;
  display: block;
  position: absolute;
  top: 10rpx;
}
.van-popup .title .left {
  left: 172rpx;
}
.van-popup .title .right {
  right: 172rpx;
}
.van-popup .title view {
  font-size: 34rpx;
  font-weight: 500;
  color: #3E3E3E;
  line-height: 48rpx;
  margin: 0 48rpx;
  text-align: center;
}
.van-popup .step {
  overflow: hidden;
  margin: 48rpx auto 46rpx;
}
.van-popup .step image,
.van-popup .step text {
  display: inline-block;
}
.van-popup .step view {
  float: left;
  text-align: center;
  width: 120rpx;
}
.van-popup .step .detail image {
  width: 80rpx;
  height: 80rpx;
  border: 2rpx dashed black;
}
.van-popup .step .detail text {
  font-size: 24rpx;
  font-weight: 400;
  color: #9C9B9B;
  line-height: 34rpx;
  text-align: center;
}
.van-popup .step .space {
  width: 68rpx;
}
.van-popup .step .space image {
  width: 18rpx;
  height: 22rpx;
  margin-top: 32rpx;
}
.van-popup .rule view {
  font-size: 28rpx;
  font-weight: 400;
  color: #9C9B9B;
  line-height: 48rpx;
  margin-bottom: 18rpx;
}
.van-popup .rule .rule_title {
  font-weight: 500;
  color: #3E3E3E;
  line-height: 40rpx;
  padding-left: 40rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 36rpx 36rpx;
}
.main {
  width: 100%;
  padding-bottom: 20rpx;
  position: relative;
}
.main .copy {
  width: 22rpx;
  height: 22rpx;
  position: absolute;
  top: 138rpx;
  right: 166rpx;
}
.main .invite {
  width: 560rpx;
  height: 96rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #682903;
  line-height: 96rpx;
  text-align: center;
  background: linear-gradient(180deg, #FCD77E 0%, #FCB765 100%);
  border-radius: 48rpx;
  margin: 0 auto 32rpx;
}
.main .inviteCode {
  width: 312rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 44rpx;
  text-align: center;
  margin: 0 auto 32rpx;
}
.main .msg {
  overflow: hidden;
  margin: 0 auto 48rpx;
  width: 688rpx;
  background: white;
  border-radius: 16rpx;
}
.main .msg .title {
  width: 344rpx;
  height: 80rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #AA2607;
  line-height: 80rpx;
  float: left;
  text-align: center;
  background: #FFEDED;
}
.main .msg .num {
  width: 344rpx;
  height: 80rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #AA2607;
  line-height: 80rpx;
  float: left;
  text-align: center;
  position: relative;
  overflow: hidden;
}
.main .msg .num view {
  display: inline-block;
}
.main .msg .num .dot {
  font-size: 20rpx;
  width: 36rpx;
  height: 60rpx;
  line-height: 100rpx;
}
.van-tabs {
  width: 644rpx;
  padding: 32rpx;
  margin: 48rpx auto;
  background: #FFFFFF;
  border-radius: 16rpx;
}
.van-tabs .van-ellipsis {
  font-size: 32rpx;
  font-weight: 500;
  color: #9C9B9B;
  line-height: 44rpx;
}
.van-tabs .van-tabs__line {
  background-color: #AA2607;
  bottom: -15rpx;
  width: 40rpx !important;
  border-radius: 16rpx;
}
.van-tabs .van-tab--active .van-ellipsis {
  color: #AA2607;
}
.van-tabs van-tab {
  padding: 20rpx 0;
}
.van-tabs van-tab view {
  overflow: hidden;
  padding: 10rpx 0;
}
.van-tabs van-tab van-image {
  float: left;
  margin-right: 20rpx;
}
.van-tabs van-tab .name {
  font-size: 30rpx;
  font-weight: 500;
  color: #3E3E3E;
  line-height: 84rpx;
  float: left;
  margin-left: 16rpx;
  padding: 0;
}
.van-tabs van-tab .time {
  font-size: 24rpx;
  font-weight: 400;
  color: #9C9B9B;
  line-height: 90rpx;
  float: right;
  padding: 0;
}
.van-tabs van-tab .rewardCord .name {
  float: none;
  line-height: 50rpx;
}
.van-tabs van-tab .rewardCord .reward {
  display: inline-block;
  font-size: 30rpx;
  font-weight: 400;
  color: #9C9B9B;
  line-height: 40rpx;
}
.van-tabs van-tab .rewardCord .time {
  line-height: 30rpx;
  color: #3E3E3E;
}
.van-tabs van-tab .rewardCord .time view {
  padding: 0;
  float: right;
  font-size: 36rpx;
  margin-left: 10rpx;
}

