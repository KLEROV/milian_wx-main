.main {
  padding: 32rpx;
}
.main > view {
  font-size: 32rpx;
  font-weight: 500;
  color: #3E3E3E;
  line-height: 44rpx;
  overflow: hidden;
  margin-top: 32rpx;
}
.main > view view.msg {
  overflow: hidden;
  width: 560rpx;
  border-bottom: 2rpx solid #F3F3F3;
  float: right;
  padding-bottom: 20rpx;
  position: relative;
}
.main > view view.msg > view {
  overflow: hidden;
}
.main > view view.msg > view > image {
  width: 24rpx;
  height: 24rpx;
  float: left;
  margin: 8rpx 10rpx 0;
}
.main > view view.msg > view > view {
  font-size: 28rpx;
  font-weight: 400;
  color: #3E3E3E;
  line-height: 40rpx;
  float: left;
}
.main > view view.msg > view .name {
  font-weight: 500;
}
.main > view view.msg .myGrades > view {
  line-height: 72rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #9C9B9B;
  overflow: hidden;
}
.main > view view.msg .myGrades > view view {
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
  border: 2rpx dashed #000000;
  float: left;
  margin-top: 20rpx;
}
.main > view view.msg .share {
  overflow: hidden;
  margin-top: 14rpx;
}
.main > view view.msg .share > view {
  border: 2rpx solid #BFEDAB;
  padding: 10rpx 16rpx;
  float: left;
  margin-right: 16rpx;
  border-radius: 22rpx;
}
.main > view view.msg .share > view image {
  width: 28rpx;
  height: 28rpx;
  float: left;
}
.main > view view.msg .share > view view {
  font-size: 20rpx;
  font-weight: 400;
  color: #3E3E3E;
  line-height: 22rpx;
  float: left;
  margin-left: 4rpx;
}
.main > view view.msg .grades {
  color: #FFFFFF;
  width: 120rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  background: linear-gradient(90deg, #7840F6 0%, #B464EF 100%);
  border-radius: 28rpx;
  float: right;
  position: absolute;
  bottom: 68rpx;
  right: 0;
}
.main > view view.msg .grades.actived {
  display: none;
}
.main > view view.msg.last {
  border-bottom: none;
}
