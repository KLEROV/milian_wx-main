.main {
  width: 686rpx;
  margin: 0 auto;
}
.main > image {
  width: 100%;
  margin: 44rpx 0 0rpx 0;
}
.main > view {
  padding-bottom: 32rpx;
  border-bottom: 2rpx solid #F3F3F3;
  margin-top: 32rpx;
}
.main .title {
  font-size: 28rpx;
  font-weight: 500;
  color: #3E3E3E;
  line-height: 40rpx;
  margin-bottom: 16rpx;
}
.main .detail, .main .getDetail, .main .time {
  font-size: 24rpx;
  font-weight: 400;
  color: #3E3E3E;
  line-height: 36rpx;
}
.main .getDetail {
  color: #AB5FF1;
  line-height: 34px;
  overflow: hidden;
}
.main .getDetail view {
  float: left;
}
.main .getDetail image {
  width: 22rpx;
  height: 14rpx;
  margin-left: 8rpx;
}
.main .time {
  color: #C9C9C9;
  line-height: 34rpx;
  text-align: right;
  margin-top: 8rpx;
}

